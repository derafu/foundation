{% extends 'layouts/default.html.twig' %}

{% block title %}Derafu: Foundation - Home{% endblock %}

{% block main %}
<section>
    <twig:block-hero
        size="mini"
        title="Derafu ORG"
        subtitle="Innovación y Comunidad en Tecnología y Educación"
    />
</section>

<section id="software">
    <twig:block-title
        title="Proyectos de Código Abierto"
        subtitle="Desarrollando herramientas de código abierto para simplificar y mejorar el desarrollo de software."
    />

    <twig:block-card-grid
        :cards="[
            {
                image: '/img/software/derafu-twig.png',
                title: 'Componentes UX para Twig',
                description: 'Extensión de Twig con filtros y aproximadamente 40 componentes para el sistema de plantillas en PHP.',
                button_text: 'Ver Proyecto',
                button_url: 'https://derafu.github.io/twig'
            },
            {
                image: '/img/software/derafu-data-processor.png',
                title: 'Procesamiento de Datos',
                description: 'Procesamiento datos a través de cuatro fases: casteo, transformación, sanitización y validación.',
                button_text: 'Ver Proyecto',
                button_url: 'https://derafu.github.io/data-processor'
            },
            {
                image: '/img/software/derafu-chart.png',
                title: 'Gráficos con GD',
                description: 'Una biblioteca PHP para generar gráficos con GD u otros renderizadores personalizados.',
                button_text: 'Ver Proyecto',
                button_url: 'https://derafu.github.io/chart'
            }
        ]"
        :cols="3"
    />
</section>

<hr/>

<section id="education">
    <twig:block-title
        title="Educación"
        subtitle="Creando herramientas innovadoras que hacen el aprendizaje más accesible e interactivo."
    />

    <twig:block-card-grid
        :cards="[
            {
                image: '/img/education/flobix.png',
                title: 'Flobix',
                description: 'Una herramienta educativa que permite el aprendizaje a través de imágenes y símbolos.',
                button_text: 'Aprende Más',
                button_url: 'https://www.flobix.org'
            },
            {
                image: '/img/education/liberalism.png',
                title: 'Responsabilidad Civil y Libertad',
                description: 'Respeto por los proyectos de vida individuales basado en el principio de no agresión.',
                button_text: 'Aprende Más',
                button_url: ''
            },
            {
                image: '/img/education/finance.png',
                title: 'Finanzas Personales',
                description: 'Contenido solo informativo. No se realizan recomendaciones de inversión.',
                button_text: 'Aprende Más',
                button_url: ''
            }
        ]"
        :cols="3"
    />
</section>

<hr/>

<section id="community">
    <twig:block-title
        title="Iniciativas Comunitarias"
        subtitle="Fomentando proyectos que promueven la colaboración, la inclusión y el conocimiento compartido."
    />

    <twig:block-card-grid
        :cards="[
            {
                image: '/img/community/guarida.png',
                title: 'Guarida',
                description: 'Un espacio y comunidad de juegos centrada en juegos de cartas coleccionables y RPGs.',
                button_text: 'Aprende Más',
                button_url: 'https://www.guarida.cl',
                offset: 4
            }
        ]"
        :cols="3"
    />
</section>

<hr/>

<section id="team">
    <twig:block-title
        title="Equipo"
        subtitle="Conoce a las personas detrás de Derafu ORG, comprometidas con el código abierto y la educación."
    />

    <twig:block-team
        :members="[
            {
                name: 'Esteban',
                role: 'Desarrollador de Software & Emprendedor',
                image: '/img/team/esteban.png',
                bio: 'Apasionado por el desarrollo de software, la automatización y las estrategias de negocio. Con años de experiencia en la creación de soluciones innovadoras. Actualmente cursando un MBA.',
                links: [
                    {
                        icon: 'fa-brands fa-linkedin',
                        text: 'LinkedIn',
                        url: 'https://www.linkedin.com/in/estebandelaf'
                    },
                    {
                        icon: 'fa-brands fa-github',
                        text: 'GitHub',
                        url: 'https://github.com/estebandelaf'
                    }
                ]
            },
            {
                name: 'Marcela',
                role: 'Educación & Marketing',
                image: '/img/team/marcela.png',
                bio: 'Apasionada por la educación y la gestión empresarial, con formación en educación infantil y un diplomado en marketing. Actualmente ampliando sus habilidades en programación.',
                links: [
                    {
                        icon: 'fa-brands fa-linkedin',
                        text: 'LinkedIn',
                        url: 'https://www.linkedin.com/in/marcela-morales-peralta-26054a88'
                    }
                ]
            },
            {
                name: 'Valentina',
                role: 'Kinesióloga & Futura Desarrolladora de Software',
                image: '/img/team/valentina.png',
                bio: 'Kinesióloga en transición al mundo tecnológico. Apasionada por la tecnología, el bienestar y la conciencia plena a través del yoga. Actualmente completando un bootcamp de programación.',
