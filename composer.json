{
    "name": "derafu/foundation",
    "description": "Derafu: Foundation - Base for Derafu's Sites",
    "type": "library",
    "homepage": "https://derafu.org/foundation",
    "license": "MIT",
    "authors": [
        {
            "name": "Esteban De La Fuente Rubio / Derafu",
            "homepage": "https://www.derafu.org"
        }
    ],
    "support": {
        "issues": "https://github.com/derafu/foundation/issues",
        "source": "https://github.com/derafu/foundation"
    },
    "autoload": {
        "psr-4": {
            "Derafu\\Foundation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Derafu\\TestsFoundation\\": "tests/src/"
        }
    },
    "require": {
        "php": "^8.3",
        "derafu/http": "dev-main",
        "derafu/markdown": "^1.0"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "friendsofphp/php-cs-fixer": "^3.63",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^11.4"
    },
    "scripts": {
        "docs": "php tools/phpdocumentor run --config=phpdoc.xml",
        "tests": "XDEBUG_MODE=coverage vendor/bin/phpunit --configuration=phpunit.xml",
        "phpcs-fix": "php-cs-fixer fix -v --config=php-cs-fixer.php",
        "phpcs-fix-dry-run": "php-cs-fixer fix -v --dry-run --diff --config=php-cs-fixer.php",
        "phpstan": "phpstan analyse --configuration=phpstan.neon --memory-limit=1G",
        "phpstan-export": "phpstan analyse --configuration=phpstan.neon --level 9 --generate-baseline",
        "build": "npm run build"
    },
    "bin": ["bin/derafu-foundation"],
    "minimum-stability": "dev",
    "prefer-stable": true
}
